<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WeatherFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/weatherLinearLayout">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/locationLayout"
                android:layout_marginTop="16dp">

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/locationInput"
                    android:layout_weight="1"
                    android:hint="@string/suche" />

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <Button
                    android:text="@string/suchen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchButton"
                    android:layout_weight="1" />

        </LinearLayout>

        <Button
                android:text="@string/mein_standort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/getCurrentLocationButton"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:id="@+id/weatherDetailsLinearLayout">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentWeatherHeading"
                    android:textStyle="bold"
                    android:text="Aktuelles Wetter"
                    android:textSize="25sp"
                    android:gravity="center" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="25sp"
                    android:text="Münster"
                    android:textStyle="normal"
                    android:id="@+id/locationText" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:id="@+id/mainInfoLinearLayout">

                <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:id="@+id/weatherIcon" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginLeft="8dp"
                        android:text="16°C"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:id="@+id/temperature"
                        android:gravity="center_vertical" />

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="Gefühlt 17°C"
                    android:textSize="20sp"
                    android:id="@+id/feelsLike" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="24dp"
                    android:id="@+id/minMaxTemperatureLinearLayout">

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icons_temperature_30"
                        android:id="@+id/minMaxTemperatureIcon" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="19"
                        android:textSize="16sp"
                        android:id="@+id/maxTemp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center_vertical"
                        android:text=" / "
                        android:textSize="16sp"
                        android:id="@+id/slash" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center_vertical"
                        android:text="11"
                        android:textSize="16sp"
                        android:id="@+id/minTemp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center_vertical"
                        android:text=" °C "
                        android:textSize="16sp"
                        android:id="@+id/celsius" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:id="@+id/windLinearLayout">

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_wind_30"
                        android:id="@+id/windIcon" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="2.7 m/s "
                        android:textSize="16sp"
                        android:id="@+id/windSpeed" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center_vertical"
                        android:text="SW"
                        android:textSize="16sp"
                        android:id="@+id/windDirection" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="24dp"
                    android:id="@+id/humidityLayout">

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_humidity_30"
                        android:id="@+id/humidityIcon" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:text="62 %"
                        android:textSize="16sp"
                        android:id="@+id/humidityText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>