<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_marginVertical="4dp"
    tools:context=".fragment.view.ShoppingListFragment">

    <CheckBox
        android:id="@+id/shoppingsListEntryCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:button="@drawable/custom_checkbox"
        android:paddingVertical="4dp"
        android:paddingStart="8dp"
        android:paddingBottom="4dp"
        android:text="" />

    <TextView
        android:id="@+id/shoppingListEntryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="1"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_delete_32"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="#00000000"
        android:id="@+id/deleteButton"
        android:contentDescription="@string/a_trash_can"
        />
</LinearLayout>