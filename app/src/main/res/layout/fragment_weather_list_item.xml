<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/forecastWeatherItemLayout">

        <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/forecastWeatherItemImage"
                android:layout_weight="1" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/forecastWeatherItemLinearLayout"
                android:layout_weight="1">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/forecastWeatherItemTime"
                    android:layout_weight="1"
                    android:textStyle="bold" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/forecastWeatherItemTemperature"
                    android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>